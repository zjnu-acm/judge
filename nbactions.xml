<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>build</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>package</goal>
        </goals>
    </action>
    <action>
        <actionName>rebuild</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>clean</goal>
            <goal>package</goal>
        </goals>
    </action>
    <action>
        <actionName>build-with-dependencies</actionName>
        <reactor>also-make</reactor>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>package</goal>
        </goals>
    </action>
    <action>
        <actionName>clean</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>clean</goal>
        </goals>
    </action>
    <action>
        <actionName>run</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>spring-boot:run</goal>
        </goals>
        <properties>
            <run.jvmArguments>-Dfile.encoding=UTF-8 -Dserver.tomcat.basedir=target -Dserver.port=8082 -noverify -XX:TieredStopAtLevel=1</run.jvmArguments>
            <Env.SPRING_OUTPUT_ANSI_ENABLED>always</Env.SPRING_OUTPUT_ANSI_ENABLED>
        </properties>
    </action>
    <action>
        <actionName>debug</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>spring-boot:run</goal>
        </goals>
        <properties>
            <run.jvmArguments>-Dfile.encoding=UTF-8 -Dserver.tomcat.basedir=target -Dserver.port=8082 -noverify -XX:TieredStopAtLevel=1 -Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address}</run.jvmArguments>
            <Env.SPRING_OUTPUT_ANSI_ENABLED>always</Env.SPRING_OUTPUT_ANSI_ENABLED>
            <jpda.listen>true</jpda.listen>
        </properties>
    </action>
    <action>
        <actionName>test.single</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>test</goal>
        </goals>
        <properties>
            <test>${packageClassName}</test>
            <skipTests>false</skipTests>
        </properties>
    </action>
    <action>
        <actionName>test</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>test</goal>
        </goals>
        <properties>
            <skipTests>false</skipTests>
        </properties>
    </action>
    <action>
        <actionName>javadoc</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>pre-site</goal>
            <goal>javadoc:javadoc</goal>
        </goals>
    </action>
    <action>
        <actionName>debug.test.single</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>test</goal>
        </goals>
        <properties>
            <test>${packageClassName}</test>
            <forkMode>once</forkMode>
            <jpda.listen>maven</jpda.listen>
            <skipTests>false</skipTests>
        </properties>
    </action>
    <action>
        <actionName>CUSTOM-sortpom:sort</actionName>
        <displayName>sortpom:sort</displayName>
        <goals>
            <goal>sortpom:sort</goal>
        </goals>
    </action>
    <action>
        <actionName>CUSTOM-build skip test</actionName>
        <displayName>build skip test</displayName>
        <goals>
            <goal>package</goal>
        </goals>
        <properties>
            <skipTests>true</skipTests>
        </properties>
    </action>
    <action>
        <actionName>CUSTOM-clean package maven.tesk.skip=true</actionName>
        <displayName>clean package skipTests=true</displayName>
        <goals>
            <goal>clean</goal>
            <goal>package</goal>
        </goals>
        <properties>
            <skipTests>true</skipTests>
        </properties>
    </action>
    <action>
        <actionName>CUSTOM-generate-sources</actionName>
        <displayName>generate-sources</displayName>
        <goals>
            <goal>generate-sources</goal>
        </goals>
    </action>
    <action>
        <actionName>CUSTOM-deploy</actionName>
        <displayName>deploy</displayName>
        <packagings>
            <packaging>war</packaging>
            <packaging>ear</packaging>
            <packaging>ejb</packaging>
        </packagings>
        <goals>
            <goal>package</goal>
        </goals>
        <properties>
            <netbeans.deploy>true</netbeans.deploy>
        </properties>
    </action>
    <action>
        <actionName>CUSTOM-deploy skip tests</actionName>
        <displayName>deploy skip tests</displayName>
        <packagings>
            <packaging>war</packaging>
            <packaging>ear</packaging>
            <packaging>ejb</packaging>
        </packagings>
        <goals>
            <goal>package</goal>
        </goals>
        <properties>
            <netbeans.deploy>true</netbeans.deploy>
            <skipTests>true</skipTests>
        </properties>
    </action>
    <action>
        <actionName>CUSTOM-verify javadoc:javadoc site:site</actionName>
        <displayName>verify javadoc:javadoc site:site</displayName>
        <goals>
            <goal>verify</goal>
            <goal>javadoc:javadoc</goal>
            <goal>site:site</goal>
        </goals>
    </action>
    <action>
        <actionName>run.single.main</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>exec:exec</goal>
        </goals>
        <properties>
            <exec.args>-Dfile.encoding=UTF-8 -classpath %classpath ${packageClassName}</exec.args>
            <exec.executable>java</exec.executable>
            <exec.classpathScope>${classPathScope}</exec.classpathScope>
        </properties>
    </action>
    <action>
        <actionName>debug.single.main</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>exec:exec</goal>
        </goals>
        <properties>
            <exec.args>-Dfile.encoding=UTF-8 -noverify -XX:TieredStopAtLevel=1 -Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -classpath %classpath ${packageClassName}</exec.args>
            <exec.executable>java</exec.executable>
            <exec.classpathScope>${classPathScope}</exec.classpathScope>
            <Env.SPRING_OUTPUT_ANSI_ENABLED>always</Env.SPRING_OUTPUT_ANSI_ENABLED>
            <jpda.listen>true</jpda.listen>
        </properties>
    </action>
</actions>
